<?xml version="1.0" encoding="UTF-8"?>
<odoo>

  <!-- Wizard form view -->
  <record id="view_car_model_wizard_form" model="ir.ui.view">
    <field name="name">car.wizard.form</field>
    <field name="model">car.wizard</field>
    <field name="arch" type="xml">
      <form string="Car Details Wizard">
        <group>
          <field name="name"/>
          <field name="price"/>
          <field name="quantity"/>
          <field name="total" readonly="1"/>
        </group>
        <footer>
          <button string="Confirm" type="object" name="open_car_wizard" class="btn-primary"/>
          <button string="Cancel" class="btn-secondary" special="cancel"/>
        </footer>
      </form>
    </field>
  </record>
</odoo>