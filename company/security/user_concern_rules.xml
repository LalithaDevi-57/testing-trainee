<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="rule_user_concern_admin_all" model="ir.rule">
        <field name="name">Admin: See All Concerns</field>
        <field name="model_id" ref="model_user_concern"/>
        <field name="domain_force">[(1, '=', 1)]</field> <!-- No filter -->
        <field name="groups" eval="[(4, ref('base.group_system'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="True"/>
    </record>
    <record id="rule_user_concern_own" model="ir.rule">
        <field name="name">User: See Own Concerns</field>
        <field name="model_id" ref="company.model_user_concern"/>
        <field name="domain_force">[('user_id', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="False"/>
    </record>
</odoo>