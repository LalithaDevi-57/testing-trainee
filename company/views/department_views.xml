<odoo>
    <!-- Tree View -->
    <record id="view_office_department_tree" model="ir.ui.view">
        <field name="name">office.department.tree</field>
        <field name="model">office.department</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="manager_id"/>
                <field name="location"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_office_department_form" model="ir.ui.view">
        <field name="name">office.department.form</field>
        <field name="model">office.department</field>
        <field name="arch" type="xml">
            <form string="Department">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="manager_id"/>
                        <field name="location"/>
                        <field name="join_data"/>
                        <field name="type"/>
                    </group>
                    <notebook>
                        <page string="Employees">
                            <field name="employee_ids">
                                <tree editable="bottom">
                                    <field name="name"/>
                                    <field name="email"/>
                                    <field name="phone"/>
                                </tree>
                            </field>
                        </page>
                        <page string="info">
                            <field name="employee_ids">
                                <tree editable="bottom">
                                    <field name="join_data" string="join_date"/>
                                    <field name="location" string="location"/>
                                </tree>
                            </field>
                        </page>
                        <page string="extra Info">
                            <group>
                                <field name="employee_file" filename="employee_file_name"/>
                                <field name="employee_file_name" invisible="1"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_office_department_search" model="ir.ui.view">
        <field name="name">office.department.search</field>
        <field name="model">office.department</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="manager_id"/>
                <field name="location"/>
                <filter string="Has Employees" name="has_employee" domain="[('employee_ids','!=',False)]"/>
            </search>
        </field>
    </record>
</odoo>