<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_order_form_inherit_markup" model="ir.ui.view">
        <field name="name">sale.order.form.markup</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="x_markup_percent"/>
            </xpath>
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_apply_markup"
                        string="Apply Markup"
                        type="object"
                        class="oe_stat_button"
                        icon="fa-percent"/>
            </xpath>
        </field>
    </record>
    <record id="view_sale_order_form_smartbutton_inherit" model="ir.ui.view">
        <field name="name">sale.order.smartbutton.adjusted</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='payment_term_id']" position="after">
                <field name="total_adjusted_price"/>
            </xpath>
            <xpath expr="//div[@class='oe_button_box']" position="inside">
                <button name="action_view_adjusted_lines"
                        type="object"
                        class="oe_stat_button"
                        icon="fa-dollar">
                    <field name="total_adjusted_price"
                           widget="monetary"
                           options="{'currency_field': 'currency_id'}"/>
                    <span class="o_stat_text">Adjusted Total</span>
                </button>
            </xpath>
        </field>
    </record>
</odoo>