<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_sale_order_form_inherit_total_qty" model="ir.ui.view">
        <field name="name">sale.order.total.qty</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <!-- Add total quantity field below the order lines inside the notebook page -->
            <xpath expr="//group[@class='oe_subtotal_footer']/field[@name='tax_totals']" position="before">
                <field name="total_qty" readonly="1"/>
            </xpath>
        </field>
    </record>

    <record id="view_purchase_order_form_inherit_total_qty" model="ir.ui.view">
        <field name="name">purchase.order.total.qty</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">

            <!-- CORRECT XPATH: order_line is inside a page -->
            <xpath expr="//group[@class='oe_subtotal_footer']/field[@name='tax_totals']" position="before">
                <field name="total_qty" readonly="1"/>
            </xpath>
        </field>
    </record>
    <record id="view_picking_form_inherit_total_qty" model="ir.ui.view">
        <field name="name">stock.picking.total.qty</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <!-- CORRECTED: move_ids_without_package is inside a page -->
            <xpath expr="//page/field[@name='move_ids_without_package']" position="after">
                <group>
                    <field name="total_qty" readonly="1"/>
                </group>
            </xpath>
        </field>
    </record>

</odoo>