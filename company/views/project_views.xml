<odoo>
    <!-- Tree View -->
    <record id="view_office_project_tree" model="ir.ui.view">
        <field name="name">office.project.tree</field>
        <field name="model">office.project</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="employee_id"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="deadline"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_office_project_form" model="ir.ui.view">
        <field name="name">office.project.form</field>
        <field name="model">office.project</field>
        <field name="arch" type="xml">
            <form string="Office Project">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="employee_id"/>
                    </group>
                    <group>
                        <field name="start_date"/>
                        <field name="end_date"/>
                        <field name="deadline"/>
                    </group>
                    <notebook>
                        <page string="Tasks">
                            <field name="task_ids">
                                <tree editable="bottom">
                                    <field name="name"/>
                                    <field name="assigned_to"/>
                                    <field name="deadline"/>
                                    <field name="status"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Employee">
                            <field name="task"/>
                        </page>
                        <page string="File">
                             <group>
                                <field name="employee_file" filename="employee_file_name"/>
                                <field name="employee_file_name" invisible="1"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
