<odoo>
    <!-- Form View with 3 Tabs -->
    <record id="view_office_employee_form" model="ir.ui.view">
        <field name="name">office.employee.form</field>
        <field name="model">office.employee</field>
        <field name="arch" type="xml">
            <form string="Employee">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="email"/>
                        <field name="phone"/>
                        <field name="department_id"/>
                    </group>
                    <notebook>
                        <page string="Personal Info">
                            <group>
                                <field name="name"/>
                                <field name="email"/>
                                <field name="phone"/>
                            </group>
                        </page>
                        <page string="Department">
                            <group>
                                <field name="department_id"/>
                            </group>
                        </page>
                        <page string="Projects">
                            <field name="project_ids">
                                <tree editable="bottom">
                                    <field name="name"/>
                                    <field name="start_date"/>
                                    <field name="end_date"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Tree View -->
    <record id="view_office_employee_tree" model="ir.ui.view">
        <field name="name">office.employee.tree</field>
        <field name="model">office.employee</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="email"/>
                <field name="phone"/>
                <field name="department_id"/>
            </tree>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_office_employee_search" model="ir.ui.view">
        <field name="name">office.employee.search</field>
        <field name="model">office.employee</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" string="Employee Name"/>
                <field name="department_id" string="Department"/>
                <filter string="Has Projects" name="filter_has_projects"
                        domain="[('project_ids','!=',False)]"/>
            </search>
        </field>
    </record>
</odoo>
