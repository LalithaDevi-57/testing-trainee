<odoo>
    <record id="view_company_purchase_form" model="ir.ui.view">
        <field name="name">company.purchase.form</field>
        <field name="model">company.purchase</field>
        <field name="arch" type="xml">
            <form string="Custom Purchase Order">
                <header>
                    <button name="action_create_real"
                            string="Data Copy"
                            type="object"
                            class="btn-primary"/>
                </header>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="partner_id" domain="[('supplier_rank', '>', 0)]"/>
                        <field name="date_order"/>
                        <field name="real_purchase_order_id" readonly="1" options="{'no_create': True}"/>
                    </group>
                    <notebook>
                        <page string="Order Lines">
                            <field name="line_ids">
                                <tree editable="bottom" create="true" edit="true">
                                    <field name="product_id"/>
                                    <field name="name"/>
                                    <field name="quantity"/>
                                    <field name="price_unit"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <record id="view_purchase_order_form_inherit_custom_button" model="ir.ui.view">
            <field name="name">purchase.order.form.inherit.custom.button</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//header/button[@name='button_cancel']" position="after">
                    <button name="action_copy_to_company_purchase"
                            string="Copy to Company "
                            type="object"
                            class="btn-white"
                            invisible="state != 'purchase'"/>
                </xpath>

            </field>
        </record>
</odoo>
