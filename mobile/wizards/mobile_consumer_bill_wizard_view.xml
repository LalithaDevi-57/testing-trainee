<odoo>
    <record id="view_mobile_consumer_bill_wizard_form" model="ir.ui.view">
        <field name="name">mobile.consumer.bill.wizard.form</field>
        <field name="model">mobile.consumer.bill.wizard</field>
        <field name="arch" type="xml">
            <form string="Generate Consumer Bill">
                <group>
                    <field name="mobile_id"/>
                    <field name="product_id"/>
                    <field name="quantity"/>
                    <field name="price"/>
                </group>
                <footer>
                    <button string="Create Bill" type="object" name="action_create_bill" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    <record id="action_mobile_consumer_bill_wizard" model="ir.actions.act_window">
        <field name="name">Generate Bill</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">mobile.consumer.bill.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
