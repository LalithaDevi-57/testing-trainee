<odoo>
    <record id="view_mark_done_wizard_form" model="ir.ui.view">
        <field name="name">mark.done.wizard.form</field>
        <field name="model">todo.mark.done.wizard</field>
        <field name="arch" type="xml">
            <form string="Mark Tasks as Done">
                <group>
                    <group>
                        <field name="from_date"/>
                        <field name="name"/>
                    </group>
                    <group>
                        <field name="today"/>
                        <field name="task_ids" widget="many2many_tags"/>
                    </group>
                </group>
                <footer>
                    <button string="Mark as Done" type="object" name="action_mark_as_done" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>
